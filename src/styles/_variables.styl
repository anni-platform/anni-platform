/*
 *  Variables
 */


// Colors
$copper   = #E2A480
$carmine  = #F96510

$charcoal = #1E1C1C
$slate    = #939393
$concrete = #DBDBDB
$flint     = #EBEBEB
$pebble   = #FBFBFB
$paper    = #FFFFFF


// Fonts
@import url('https://fonts.googleapis.com/css?family=Overpass+Mono:400,600|Overpass:400,600,800')

$bodyFont     = 'Overpass', sans-serif
$editorFont   = 'Overpass Mono', monospace


// Spacing
$xxs  =  pxToRem(2)
$xs   =  pxToRem(4)
$sm   =  pxToRem(8)
$md   =  pxToRem(16)
$lg   =  pxToRem(24)
$xl   =  pxToRem(48)
$xxl  =  pxToRem(96)
$huge =  pxToRem(160)


// Easing
$expo   = cubic-bezier(.19, 1, .22, 1)
$bounce = cubic-bezier(.175, .885, .32, 1.275)
$sine   = cubic-bezier(0.445, 0.05, 0.55, 0.95)


// Media Queries
$break-sm  = 480
$break-md  = 768
$break-lg  = 1200
$break-xl  = 1600
