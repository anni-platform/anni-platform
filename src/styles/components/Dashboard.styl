.Dashboard
  align-items center
  display flex
  flex-direction column
  height 90%
  min-height 500px
  justify-content center

  .projectList
    @extend h1
    display flex
    flex-direction column
    flex-grow 0
    list-style none
    position relative

    li > a.Button.large
      display inline-block
      padding $sm 0
      position relative

      &:link, &:visited
        text-decoration none

      &:after
        background $copper
        bottom 5px
        content ''
        height 4px
        left 0
        position absolute
        transition all 600ms $expo
        width 0

      &:hover
        transform: scale(1)
        &:after
          width 100%
