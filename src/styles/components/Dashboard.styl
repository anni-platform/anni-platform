.Dashboard
  padding $xxl 0 0
  position: relative
  center(column)
  min-height: 100vh

  .content
    center()
    margin: $xxl 0

    .projectList
      @extend h1
      display flex
      flex-direction column
      flex-grow 0
      list-style none
      position relative

      for items in 1..99
        :nth-child({items})
          opacity: 0
          animation: fadeUp 600ms 60ms*items $expo forwards

      .Button.link
        font-size: pxToRem(32)
        padding-bottom: $sm
        margin-bottom: $sm

    .Button.full
      transform: scale(0)
      animation: pop 1200ms 200ms forwards

  .background
    animation: slideDown 600ms $expo forwards
    background: $charcoal
    height: 100%
    position: absolute
    top: 0
    width: 100%
