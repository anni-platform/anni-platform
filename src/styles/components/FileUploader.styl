.FileUploader
  center()
  min-height: pxToRem(400)
  outline-offset: -($xs)
  outline $xxs dashed $concrete
  padding: $xl
  position: relative
  transition: 600ms $expo
  text-align: center

  .instructions
    color: rgba($charcoal, .3)
    padding: $xl
    transition: 600ms $expo

  &-tooltip
    @extend h3
    color: $charcoal
    display: inline-block
    opacity: 0
    position: absolute
    top: 50%
    transition: 600ms $expo
    transform: translate(-50%, -50%);
    pointer-events none

  &:hover
    pointer-events all

  &.active
    outline-color $copper
    outline-offset: -($md)

    .instructions
      opacity: 0

    .tooltip
      opacity: 1

    .ImageList
      opacity: .3
