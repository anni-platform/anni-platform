.navigation
  align-items center
  border-bottom 1px solid $concrete
  display flex
  justify-content flex-end
  padding 16px $lgPadding
  position relative

  :first-child
    flex-grow 2

  a.icon
    margin 0 $mdPadding

  a.link
    display inline-block
    font-family $headlineFont
    margin 0 $mdPadding
    padding $smPadding*1.5 0
    position relative
    text-transform uppercase

    &:link, &:visited
      text-decoration none

    &:after
      background $copper
      bottom 5px
      content ''
      height 4px
      left 0
      position absolute
      transition all 800ms $expo
      width 0

    &:hover
      &:after
        width 100%

  .profile
    border-radius 100px
    color $paper
    font-family $bodyFont
    font-size 18px
    font-weight 800
    height 40px
    text-align center
    width 40px
