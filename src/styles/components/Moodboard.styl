.Moodboard
  padding: pxToRem(160) $sm

  .ImageList
    column-count: 1
    column-gap: 0
    padding: 0

    +above($break-sm)
      column-count: 2

    +above($break-md)
      column-count: 3

    +above($break-lg)
      column-count: 4

  .ImageListItem
    break-inside: avoid
    padding: $sm
    position: relative

    & > img
      height: auto
      width: 100%
