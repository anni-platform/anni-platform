.Button
  align-items: center;
  box-sizing: border-box
  background: none
  border pxToRem(3) solid $copper
  border-radius 360px
  color: $charcoal
  cursor pointer
  display: inline-flex
  font-size: pxToRem(14)
  letter-spacing: pxToRem(.5)
  line-height: 1
  padding: pxToRem(10) $md
  transition: all 400ms $expo

  &:focus
    outline: none

  &:hover
    transform: scale(1.02)

  svg
    margin-right: $sm


  // Styles based on Component props

  &.primary
    background: $copper
    color: $paper

  &.link
    border: none
    font-family: $headlineFont
    font-size: pxToRem(16)
    letter-spacing: pxToRem(1)
    margin: 0 $md
    padding: $sm 0
    text-transform: uppercase

    &:after
      background: $copper
      bottom: $xs
      content: ''
      height: pxToRem(3)
      left: 0
      position: absolute
      transition: all 400ms $expo
      width: 0

    &:hover
      transform: scale(1)
      &:after
        width 100%

  &.full
    border: none
    padding: 0

    svg
      width: pxToRem(40)
      height: pxToRem(40)

  &.noLabel
    padding: pxToRem(10)

    svg
      margin: 0

  &.user
    background: $copper
    width: pxToRem(40)
    height: pxToRem(40)
    padding: pxToRem(10) 0
    text-align center

    .userInitials
      color: $paper
      font-family: $bodyFont
      font-weight: 800
      display inline-block
      margin auto
      letter-spacing pxToRem(1.5)
