/*
 * --------------------------------------------------------
 *  Base styles
 * --------------------------------------------------------
 */


html
  font-smoothing antialiased
  text-size-adjust 100%

body
  box-sizing border-box

  *
    box-sizing inherit

a
  color $copper
  font-weight 400
  text-decoration none

h1, h2, h3, h4, h5
  font-family $headlineFont
  text-transform uppercase
  letter-spacing 2px

h1
  color $slate
  font-size 42px
  letter-spacing 5px
  padding $mdPadding 0

h2
  color $copper
  font-size 18px

h3
  color $copper
  font-size 12px
  padding $smPadding

p, ol, ul
  font-family $bodyFont
  font-size 1rem
  font-weight 400

img

ol

ul

strong
  font-weight 600
em
  font-style italic
