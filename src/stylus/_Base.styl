/*
 * --------------------------------------------------------
 *  Base styles
 *  Only single elements. No classes or ids
 * --------------------------------------------------------
 */


*
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box


html
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased

body

h1, h2, h3, h4, h5
  font-family $headline-font
  text-transform uppercase
  letter-spacing 2px

h1
  font-size 45px
  color $slate
  padding $md-padding 0
  letter-spacing 5px

h2
  font-size 24px
  color $copper

h3
  font-size 18px
  padding $sm-padding
  color $copper

p, ol, ul

img

ol

ul

strong
  font-weight bold
em
  font-style: italic
