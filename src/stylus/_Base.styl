/*
 * --------------------------------------------------------
 *  Base styles
 *  Only single elements. No classes or ids
 * --------------------------------------------------------
 */





html
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased

body
  box-sizing border-box

  *
    box-sizing inherit


a
  color $copper
  text-decoration none

h1, h2, h3, h4, h5
  font-family $headlineFont
  text-transform uppercase
  letter-spacing 2px

h1
  font-size 45px
  color $slate
  padding $mdPadding 0
  letter-spacing 5px

h2
  font-size 24px
  color $copper

h3
  font-size 18px
  padding $smPadding
  color $copper

p, ol, ul

img

ol

ul

strong
  font-weight bold
em
  font-style: italic
