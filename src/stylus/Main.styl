// Colors
$slate    = #000
$concrete = #FAFAFA
$copper   = #d29069


// Fonts
$display-font  = 'Playfair Display', sans-serif
$headline-font = 'Reglo-Bold', serif
$body-font     = 'Roboto Mono', sans-serif


// Margin & Padding
$global-padding = 80px

$sm-padding = 5px
$md-padding = 15px
$lg-padding = 30px


md = 1000px

// Min-Width Media Query
above(width)
  @media screen and (min-width: width)
    {block}

below(width)
  @media screen and (max-width: width)
    {block}

// Equalize Height
html, body, #root, #root > div
  height 100%

#root
  padding $md-padding

/*  Imports
 * -------------------------------------------------------- */

@import '_Typography'
@import '_Base'

// Components
@import '_Dashboard'
@import '_ProjectDetail'
@import '_ProjectList'
@import '_ImageList'

@import 'shared/*'
